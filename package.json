{
  "name": "cape-town-together-website",
  "license": "MIT",
  "scripts": {
    "js:build": "babel src/js/**/*.js --out-dir src/static/assets",
    "js:start": "babel src/js/**/*.js --out-dir src/static/assets --watch",
    "millimetr:build": "millimetr build",
    "millimetr:start": "millimetr develop",
    "storybook:start": "start-storybook -s src/static",
    "storybook": "npm-run-all --parallel js:start storybook:start",
    "build": "npm run js:build && npm run millimetr:build",
    "start": "npm-run-all --parallel js:start millimetr:start"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@millimetr/cli": "^1.1.4",
    "@storybook/html": "^5.3.19",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "front-matter": "^4.0.2",
    "markdown-it": "^11.0.0",
    "npm-run-all": "^4.1.5"
  }
}
